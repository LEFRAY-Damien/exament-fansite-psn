{{!-- Archive UPDATE --}}

<form action="/admin/archive" method="POST" enctype="multipart/form-data">
    <div class="col-md-12">

        <label for="exampleFormControlInput1">
            <h4>Date de l'archive :</h4>
        </label>

        <div class="col-md-10 center-div border border-white rounded-lg mb-2">
            <h5 class="my-1">{{ArchiveID.dateArchive}}</h5>
        </div>

        <div class="form-group d-inline-flex justify-content-center mb-2">
            <input type="text" class="form-control" id="iddateArchive" placeholder="Mois année" name="dateArchive">
        </div>
    </div>

    {{!-- Cadre modification image archive --}}
    <div class="col-md-6 center-div border border-white rounded-lg my-3">
        <h2 class="mt-2">Image présente</h2>
        <div class="col-md-5 center-div bg-white mb-2">
            <img src="{{ArchiveID.imageArchive}}" class="d-block w-100 h-75 taille_img_archm">
        </div>

    </div>

    <div class="col-md-6 center-div border border-white rounded-lg my-3">
        <h2 class="mt-2">Image de l'archive a modifier</h2>
        <div class="col-md-5 center-div bg-white"><img src="/assets/images/croix.png"
                class="d-block w-100 h-75 taille_img_arch mt-1" alt="">

        </div>

        <div class="form-group m-2">
            <input type="file" class="form-control-file mb-1" id="exampleFormControlFile1" name="imageArchive">
        </div>

    </div>
    {{!-- X Cadre modification image archive --}}

    {{!-- Cadre modification carde archives --}}
    <div class="col-md-10 center-div border border-white rounded-lg mt-2 pb-2">
        <h2 class="mt-2">Liens archive</h2>

        <div class="form-group d-inline-flex justify-content-center mb-2">
            <input type="text" class="form-control mr-2" id="idnomPremierLien"
                name="nomLink1" value="{{links.title}}">
            <input type="text" class="form-control ml-2" id="idlienPremierLien" placeholder="Liens 1" name="link1" value="">
        </div>
    </div>

    {{!-- Cadre modification carde archives --}}

    <div class="col-md-12 center-div my-4">
        <button type="submit" class="btn btn-success mb-3">Modifier l'archive</button>
</form>

{{!-- X Archive UPDATE --}}