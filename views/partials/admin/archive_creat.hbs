{{!-- Archive CREAT --}}

<form action="/admin/archive" method="POST" enctype="multipart/form-data">
    <div class="col-md-12">

        <label for="exampleFormControlInput1">
            <h4>Date de l'archive :</h4>
        </label>
        <div class="form-group d-inline-flex justify-content-center mb-2">
            <input type="text" class="form-control" id="iddateArchive" placeholder="Mois année" name="dateArchive"
                required>
        </div>
    </div>

    {{!-- Cadre modification image archive --}}
    <div class="col-md-6 center-div border border-white rounded-lg my-3">
        <h2 class="mt-2">Image de l'archive</h2>
        <div class="col-md-6 center-div bg-white">
            <img id="outpuArchive" class="d-block w-100 h-75 taille_img_arch" />
            </div>

        <div class="form-group m-2">
            <input type="file" class="form-control-file mb-1" id="imageArchive1" name="imageArchive" required
                accept="image/*" onchange="loadFileArchive(event)" >

            {{!-- Script pour afficher l'image --}}
            <script>
                var loadFileArchive = function (event) {
                    var reader = new FileReader();
                    reader.onload = function () {
                        var outpuArchive = document.getElementById('outpuArchive');
                        outpuArchive.src = reader.result;
                    };
                    reader.readAsDataURL(event.target.files[0]);
                };
            </script>
            {{!-- X Script pour afficher l'image --}}

        </div>

    </div>
    {{!-- X Cadre modification image archive --}}

    {{!-- Cadre modification carde archives --}}
    <div class="col-md-10 center-div border border-white rounded-lg mt-2 pb-2">
        <h2 class="mt-2">Liens archive</h2>

        <div class="form-group d-inline-flex justify-content-center mb-2">
            <input type="text" class="form-control mr-2" id="idnomPremierLien" placeholder="Nom liens 1" name="title"
                required>
            <input type="text" class="form-control ml-2" id="idlienPremierLien" placeholder="Liens 1" name="link"
                required>
        </div>

         <div class="form-group d-inline-flex justify-content-center mb-2">
            <input type="text" class="form-control mr-2" id="idnomPremierLien" placeholder="Nom liens 2" name="title2"
                required>
            <input type="text" class="form-control ml-2" id="idlienPremierLien" placeholder="Liens 2" name="link2"
                required>
        </div>

    </div>

    {{!-- Cadre modification carde archives --}}

    <div class="col-md-12 center-div mb-4 mt-4">
        <button type="submit" class="btn btn-success">Créé l'archive</button>
</form>

{{!-- X Archive CREAT --}}