<!-- Modal -->
<div class="modal fade" id="addArticlesModal" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="addArticlesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="addArticlesModalLabel">Charger l'article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <ul id="myUL" class="list-unstyled row">

                    {{#each listearticles}}

                    <div class="col-md-10  text-center bg-bleu_transparent_ps center-div rounded-lg my-1">

                        <form action="/admin/loadArticle" method="post">
                            <input type="hidden" class="" name="id" value="{{ _id }}">
                            <button class="btn" type="submit">{{title}}</button>
                        </form>

                    </div>

                    {{/each}}

                    <div class="modal-footer">

                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>

                    </div>

                </ul>

            </div>

        </div>
    </div>
</div>
<!-- X Modal -->