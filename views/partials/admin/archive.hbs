{{!-- Collaps archives --}}
<div class="container">
    <div class="accordion mt-5" id="accordionarchives">
        <div class="card bg-gris_transparent_ps">
            <div class="card-header" id="headingarchives">
                <h2 class="mb-0">
                    <button class="btn btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapsearchives" aria-expanded="true" aria-controls="collapsearchives">
                        <div class="container text-center text-primary pt-2">
                            <h2>Archives</h2>
                        </div>
                    </button>
                </h2>
                <div class="trait_admin"></div>
            </div>

            <div id="collapsearchives" class="collapse" aria-labelledby="headingarchives"
                data-parent="#accordionarchives">
                <div class="card-body text-center text-primary">

                    {{!-- Interieur collaps archives --}}
                    <div class="container">
                        <div
                            class="col-md-8 text-white text-center bg-bleu_transparent_ps text-decoration-none m-2 center-div pt-3">
                            <form action="/admin/archive" method="POST" enctype="multipart/form-data">
                                <div class="col-md-12">

                                    <label for="exampleFormControlInput1">
                                        <h4>Date de l'archive :</h4>
                                    </label>
                                    <div class="form-group d-inline-flex justify-content-center mb-2">
                                        <input type="text" class="form-control" id="iddateArchive" placeholder="Mois année"
                                            name="dateArchive" required>
                                    </div>
                                </div>

                                {{!-- Cadre modification image archive --}}
                                <div class="col-md-6 center-div border border-white rounded-lg my-3">
                                    <h2 class="mt-2">Image de l'archive</h2>
                                    <div class="col-md-6 center-div bg-white"><img src="assets/images/croix.png"
                                            class="d-block w-100 h-75 taille_img_arch mt-1" alt=""></div>

                                    <div class="form-group m-2">
                                        <input type="file" class="form-control-file mb-1" id="exampleFormControlFile1"
                                            name="imageArchive" required>
                                    </div>

                                </div>
                                {{!-- X Cadre modification image archive --}}

                                {{!-- Cadre modification carde archives --}}
                                <div class="col-md-10 center-div border border-white rounded-lg mt-2 pb-2">
                                    <h2 class="mt-2">Liens archive</h2>

                                    <div class="form-group d-inline-flex justify-content-center mb-2">
                                        <input type="text" class="form-control mr-2" id="idnomPremierLien" placeholder="Nom liens 1"
                                            name="nomPremierLien" required>
                                        <input type="text" class="form-control ml-2" id="idlienPremierLien" placeholder="Liens 1"
                                            name="lienPremierLien" required>
                                    </div>
                                    <div class="form-group d-inline-flex justify-content-center mb-2">
                                        <input type="text" class="form-control mr-2" id="idnomDeuxiemeLien" placeholder="Nom liens 2"
                                            name="nomDeuxiemeLien" required>
                                        <input type="text" class="form-control ml-2" id="idlienDeuxiemeLien" placeholder="Liens 2"
                                            name="lienDeuxiemeLien" required>
                                    </div>
                                    <div class="form-group d-inline-flex justify-content-center mb-2">
                                        <input type="text" class="form-control mr-2" id="idnomTroisiemeLien" placeholder="Nom liens3"
                                            name="nomTroisiemeLien">
                                        <input type="text" class="form-control ml-2" id="idlienTroisiemeLien" placeholder="Liens 3"
                                            name="lienTroisiemeLien">
                                    </div>

                                </div>
                                {{!-- Cadre modification carde archives --}}

                                <div class="col-md-12 center-div mb-4 mt-4">
                                    <button type="submit" class="btn btn-success">Créé l'archive</button>
                                </div>

                            </form>

                        </div>
                        {{!-- X Interieur collaps archives --}}
                        <div class="trait_admin"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- X collaps archives --}}