<div class="col-md-5 text-white text-center bg-bleu_transparent_ps border m-2">
    <h2 class="mt-2">Me contacter</h2>
    <img src="assets/images/img-mail.png" class="rounded-circle taille_img_contact pt-2 pb-2">
    <div class="d-flex justify-content-center">
        <form action="/contact" method="post">
            <div class="form-group col-md-12 mb-2">
                <label for="exampleFormControlInput1">Votre Nom:</label>
                <input type="text" class="form-control" name="nom">
            </div>
            <div class="form-group col-md-12 mb-2">
                <label for="exampleFormControlInput1">Votre adresse email:</label>
                <input type="email" class="form-control" name="mail" placeholder="name@example.com">
            </div>
            <div class="form-group col-md-12 mb-5">
                <label for="exampleFormControlInput1">Objets:</label>
                <input type="text" class="form-control" name="objet">
            </div>
            <div class="form-group col-md-12 mb-3">
                <label for="exampleFormControlTextarea1">Message:</label>
                <textarea class="form-control" name="message" rows="7"></textarea>
            </div>
            <button type="submit" class="btn btn-light">Envoyer</button>
        </form>
    </div>
</div>