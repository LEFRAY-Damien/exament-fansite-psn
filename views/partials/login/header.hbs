<div class="container pt-5">
    <div class="d-flex justify-content-center">
        <div class="col-md-6 text-center text-primary bg-gris_transparent_ps mt-5 border border-primary rounded">
            <h1 class="mb-3 pb-3 pt-5">Login</h1>

            <div class="d-flex justify-content-center">
                <form action="/login" method="post">
                    <div class="form-group col-md-12 mb-5">
                        <h3>Login:</h3>
                        <input type="email" name="email" class="form-control mt-2 border border-primary"
                            placeholder="Email" required>
                    </div>

                    <div class="form-group col-md-12 mb-5">
                        <h3>Mot de passe:</h3>
                        <input type="password" name="password" class="form-control mt-2 border border-primary"
                            placeholder="* mot de passe" required>
                    </div>

                    <button type="submit" class="btn btn-primary mb-5">Envoyer</button>
                </form>
            </div>
        </div>
    </div>
</div>